{
  "presets": [["@babel/preset-env", {
    "useBuiltIns": "entry",
    "modules": false,
    "loose": true,
    "targets": {
      "ie": "8",
      "browsers": ">2%"
    }
  }]],
  "plugins": [
    "add-module-exports"
  ],
  "env": {
    "test": {
      "plugins": [ "istanbul" ],
      "presets": [["@babel/preset-env", { "targets": { "node": "current" } }]]
    }
  }
}
